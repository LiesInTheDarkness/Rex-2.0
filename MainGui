local MainGui = {}

-- Function to dynamically create toggle buttons
function MainGui.createToggleButton(toggle, frame)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Position = UDim2.new(0, 50, 0, 50 + (#frame:GetChildren() - 1) * 60)
    button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    button.Text = toggle.Name
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextScaled = true
    button.Font = Enum.Font.GothamBold
    button.Parent = frame

    local state = false
    button.MouseButton1Click:Connect(function()
        state = not state
        toggle.Function(state)
        button.BackgroundColor3 = state and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(50, 50, 50)
    end)
end

return MainGui